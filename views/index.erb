<!DOCTYPE html>
<html>
<head>
    <title>
        Primes
    </title>
    <style type="text/css">
        body {
            background-color: #222222; 
            -webkit-animation:myfirst 100s;
            -webkit-animation-timing-function:linear;
            -webkit-animation-iteration-count:infinite;
            -webkit-animation-direction:alternate;
            animation:myfirst 100s;
        }
        @-webkit-keyframes myfirst {
            0% {padding: 0 100px;}
            100% {padding: 0 0;}
        }

        @keyframes myfirst {
            0% {padding: 0 100px;}
            100% {padding: 0 0;}
        }
        div {
            margin:0; 
            padding:0px;
            float: left;
            display: block;
            height: 3px;
            width: 3px;
        }
        .prime {
            /*background-color: #3388AA;*/
            background-color: #007050;
        }
        .white {/*
            background-color: #AAAAFF;
            background-color: white;
            background-color: #F25C29;*/
            background-color: #29F25C;
        }
        .blue {
           /* background-color: #AAFFFF;
            background-color: white;
            background-color: #F25C29;
            background-color: #6F4FFF;*/
            background-color: #AAF2FF;
        }
    </style>
</head>
<body id='body'>

</body>
</html>

<script type="text/javascript">
    isPrime = function(n) {
     if (isNaN(n) || !isFinite(n) || n%1 || n<2) return false; 
     if (n==leastFactor(n)) return true;
     return false;
    }

    leastFactor = function(n){
     if (isNaN(n) || !isFinite(n)) return NaN;  
     if (n==0) return 0;  
     if (n%1 || n*n<2) return 1;
     if (n%2==0) return 2;  
     if (n%3==0) return 3;  
     if (n%5==0) return 5;  
     var m = Math.sqrt(n);
     for (var i=7;i<=m;i+=30) {
      if (n%i==0)      return i;
      if (n%(i+4)==0)  return i+4;
      if (n%(i+6)==0)  return i+6;
      if (n%(i+10)==0) return i+10;
      if (n%(i+12)==0) return i+12;
      if (n%(i+16)==0) return i+16;
      if (n%(i+22)==0) return i+22;
      if (n%(i+24)==0) return i+24;
     }
     return n;
    }

    var p_count = 0;
    var body = document.getElementById('body');
    for (var i = 0; i < 100000; i++){
        if (isPrime(i)){
            var foo = document.createElement("div")
            if (isPrime(p_count)) {
                foo.className = 'white'
            } else if (isPrime(p_count + i)) {
                foo.className = 'blue'
            } else {
                foo.className = 'prime'
            }
            p_count++
            body.appendChild(foo);
        } else {
            var foo = document.createElement("div")
            body.appendChild(foo);
        }
    }
</script>